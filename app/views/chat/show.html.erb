<div class="message">
  <h1 id = "room" data-room="<%= @room.id %>" date-user="<%= current_user.id %>"><%= @user.id %>さんとのチャット></h1>
   <%= @chat.each do |chat| %>
     <% if chat_user.id == current_user.id %>
       <p style="text-align: right;"><%= chat.message %></p>
     <% else %>
       <p style="text-align: right;"><%= chat.message %></p>
     <% end %>
   <% end %>
   <%= form_with model: @chat do |f| %>
     <%= f.text_field :message %>
     <%= f.hidden_field :room_id%>
   <% end %>
 </div>